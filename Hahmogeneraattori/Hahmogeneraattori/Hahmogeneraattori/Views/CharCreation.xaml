<UserControl x:Class="Hahmogeneraattori.Views.CharCreation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hahmogeneraattori.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="614">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="614" Margin="0,0,0,-8">
            <TabItem Header="Stats" Height="22" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="49*"/>
                        <ColumnDefinition Width="559*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid Name="dgStats" HorizontalAlignment="Left" Height="439" VerticalAlignment="Top" Width="608" Grid.ColumnSpan="2" Margin="0,31,0,0"/>
                    <StackPanel HorizontalAlignment="Left" Height="31" VerticalAlignment="Top" Width="608" Grid.ColumnSpan="2">
                        <Button x:Name="btnStats" Content="Roll stats" Margin="5" Click="btnStats_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Race"/>
            <TabItem Header="Class"/>
            <TabItem Header="Feats">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Skills"/>
            <TabItem Header="Spells"/>
            <TabItem Header="Equipment"/>
        </TabControl>
    </Grid>
</UserControl>
