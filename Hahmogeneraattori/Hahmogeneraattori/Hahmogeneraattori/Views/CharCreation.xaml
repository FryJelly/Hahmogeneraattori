<UserControl x:Class="Hahmogeneraattori.Views.CharCreation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hahmogeneraattori.Views"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="614">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="500" VerticalAlignment="Top" Width="614" Margin="0,0,0,-8">
            <TabItem Header="Stats" Height="22" VerticalAlignment="Top">
                <Grid Background="#FFE5E5E5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal">                        
                            <StackPanel Name="AblilityName" Orientation="Horizontal">
                                <ListBox FontSize="24">
                                
                                    <ListBoxItem>Strength</ListBoxItem>
                                    <ListBoxItem>Dexterity</ListBoxItem>
                                    <ListBoxItem>Constitution</ListBoxItem>
                                    <ListBoxItem>Intelligence</ListBoxItem>
                                    <ListBoxItem>Wisdom</ListBoxItem>
                                    <ListBoxItem>Charisma</ListBoxItem>
                            
                                </ListBox>
                            </StackPanel>
                            <StackPanel x:Name="AbilityScore" Orientation="Horizontal">
                                <ListBox FontSize="24" x:Name="ScoreList">
                                    <TextBlock x:Name="StrScore" Text="{Binding }"/>
                                    <ListBoxItem x:Name="DexScore"/>
                                    <ListBoxItem x:Name="ConScore"/>
                                    <ListBoxItem x:Name="IntScore" DataContext="{x:Null}" Content="{Binding}"/>
                                    <ListBoxItem x:Name="WisScore"/>
                                    <ListBoxItem x:Name="ChaScore"/>

                                </ListBox>
                            </StackPanel>
                    
                        
                        </StackPanel>
                        <StackPanel HorizontalAlignment="Left" Height="31" VerticalAlignment="Bottom" Width="608" Grid.ColumnSpan="2">
                            <Button x:Name="btnStats" Content="Roll stats" Margin="5" Click="btnStats_Click"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Race">
                <ListBox Name="RaceList" FontSize="24">
                    <TextBlock> Choose a race: </TextBlock>
                    <ListBoxItem Name="Dwarf" Selected="Dwarf_Selected">Dwarf</ListBoxItem>
                    <ListBoxItem Name="Elf" Selected="Elf_Selected">Elf</ListBoxItem>
                    <ListBoxItem Name="Gnome" Selected="Gnome_Selected">Gnome</ListBoxItem>
                    <ListBoxItem Name="HalfElf" Selected="HalfElf_Selected">Half-Elf</ListBoxItem>
                    <ListBoxItem Name="HalfOrc" Selected="HalfOrc_Selected">Half-Orc</ListBoxItem>
                    <ListBoxItem Name="Halfling" Selected="Halfling_Selected">Halfling</ListBoxItem>
                    <ListBoxItem Name="Human" Selected="Human_Selected">Human</ListBoxItem>
                </ListBox>

            </TabItem>
            <TabItem Header="Class">
                <ListBox Name="ClassList" FontSize="24">
                    <TextBlock> Choose a class:</TextBlock>
                    <ListBoxItem Name="Barbarian">Barbarian</ListBoxItem>
                    <ListBoxItem Name="Bard">Bard</ListBoxItem>
                    <ListBoxItem Name="Cleric">Cleric</ListBoxItem>
                    <ListBoxItem Name="Druid">Druid</ListBoxItem>
                    <ListBoxItem Name="Fighter">Fighter</ListBoxItem>
                    <ListBoxItem Name="Monk">Monk</ListBoxItem>
                    <ListBoxItem Name="Paladin">Paladin</ListBoxItem>
                    <ListBoxItem Name="Ranger">Ranger</ListBoxItem>
                    <ListBoxItem Name="Rouge">Rouge</ListBoxItem>
                    <ListBoxItem Name="Sorcerer">Sorcerer</ListBoxItem>
                    <ListBoxItem Name="Wizard">Wizard</ListBoxItem>
                </ListBox>
            </TabItem>

            <TabItem Header="Feats">
                <ListBox>
                    <ListBoxItem></ListBoxItem>
                    <ListBoxItem></ListBoxItem>
                    <ListBoxItem></ListBoxItem>
                </ListBox>
            </TabItem>
            <TabItem Header="Skills"/>
            <TabItem Header="Spells"/>
            <TabItem Header="Equipment"/>
            
        </TabControl>
    </Grid>
</UserControl>
